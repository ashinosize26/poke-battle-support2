@page "/basestats"
@inject BattleModel Battle

<PageTitle>種族値</PageTitle>
<MudGrid Class="px-4">
    @* 自分 *@
    <MudItem xs="12" sm="6">
        <MudText Typo="Typo.h5" Class="mx-4 mt-8 mb-4">自分のパーティ</MudText>
        <MudGrid Class="mx-4">
            @foreach (var poke in Battle.MyParty)
            {
                <MudItem xs="6">
                    <PokeBaseStatsView Poke="@poke" BaseStatBarColor="@Color.Info" />
                </MudItem>
            }
        </MudGrid>
    </MudItem>
    @* 相手 *@
    <MudItem xs="12" sm="6">
        <MudText Typo="Typo.h5" Class="mx-4 mt-8 mb-4">相手のパーティ</MudText>
        <MudGrid Class="mx-4">
            @foreach (var poke in Battle.YourParty)
            {
                <MudItem xs="6">
                    <PokeBaseStatsView Poke="@poke" BaseStatBarColor="@Color.Secondary" />
                </MudItem>
            }
        </MudGrid>
    </MudItem>
</MudGrid>
